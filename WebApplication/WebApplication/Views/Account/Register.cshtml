@model WebApplication.Models.RegisterViewModel
@{
    Layout = "_Layout";
}
<img src="/img/smiley-beemo.png" alt="Smiley face">
<h1>Register</h1>
@using (Html.BeginForm("Register", "Account"))
{
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()

    @Html.LabelFor(m => m.FirstName)
    @Html.TextBoxFor(m => m.FirstName)

    @Html.LabelFor(m => m.LastName)
    @Html.TextBoxFor(m => m.LastName)

    @Html.LabelFor(m => m.Age)
    @Html.TextBoxFor(m => m.Age)

    @Html.LabelFor(m => m.PhoneNumber)
    @Html.TextBoxFor(m => m.PhoneNumber)

    @Html.LabelFor(m => m.ContactPerson)
    @Html.TextBoxFor(m => m.ContactPerson)

    @Html.LabelFor(m => m.NameOfNextKin)
    @Html.TextBoxFor(m => m.NameOfNextKin)

    @Html.LabelFor(m => m.Email)
    @Html.TextBoxFor(m => m.Email)

    @Html.LabelFor(m => m.Password)
    @Html.PasswordFor(m => m.Password)

    @Html.LabelFor(m => m.ConfirmPassword)
    @Html.PasswordFor(m => m.ConfirmPassword)
    <button type="submit">Register</button>
    <div class="Link">@Html.ActionLink("Already have an account? Go to the login page", "Login", "Account")</div>

}
